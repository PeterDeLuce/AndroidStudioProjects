<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity 2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_first_name"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="First Name:"
        android:textSize="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tv_last_name"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Last Name:"
        android:textSize="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:layout_below="@+id/tv_first_name"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Email:"
        android:textSize="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:layout_below="@+id/tv_last_name"/>

    <TextView
        android:id="@+id/tv_first_name2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=""
        android:textSize="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toRightOf="@+id/tv_first_name"/>

    <TextView
        android:id="@+id/tv_last_name2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=""
        android:textSize="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:layout_toRightOf="@+id/tv_last_name"
        android:layout_below="@+id/tv_first_name"/>

    <TextView
        android:id="@+id/tv_email2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=""
        android:textSize="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:layout_toRightOf="@+id/tv_email"
        android:layout_below="@+id/tv_last_name"/>
</RelativeLayout>